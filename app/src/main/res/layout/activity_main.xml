<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    tools:context="home.fastcalcul.MainActivity">


    <TextView
        android:id="@+id/goodPointsLabel"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="8dp"
        android:background="#51b11d"
        android:gravity="center"
        android:text="@string/goodpoints"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/sum"
        app:layout_constraintEnd_toStartOf="@+id/goodPoints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/goodPoints"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginBottom="24dp"
        android:background="#51b11d"
        android:gravity="center"
        android:text="@string/zero"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/sum"
        app:layout_constraintEnd_toStartOf="@+id/countdown"
        app:layout_constraintStart_toEndOf="@+id/goodPointsLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/countdown"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="16dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/sum"
        app:layout_constraintEnd_toStartOf="@+id/badPoints"
        app:layout_constraintStart_toEndOf="@+id/goodPoints"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/badPoints"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginBottom="24dp"
        android:background="#dc0800"
        android:gravity="center"
        android:text="@string/zero"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/sum"
        app:layout_constraintEnd_toStartOf="@+id/badPointsLabel"
        app:layout_constraintStart_toEndOf="@+id/countdown"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/badPointsLabel"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="8dp"
        android:background="#dc0800"
        android:gravity="center"
        android:text="@string/badpoints"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/sum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/badPoints"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_weight="1"
        android:background="#ff9654"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@android:color/background_light"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/equal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countdown" />

    <TextView
        android:id="@+id/equal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:background="#ff9654"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/equal"
        android:textColor="@android:color/background_light"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/plus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sum" />

    <TextView
        android:id="@+id/randomOperand"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginBottom="128dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:background="#ff9654"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/choice1"
        app:layout_constraintEnd_toStartOf="@+id/plus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/equal" />

    <TextView
        android:id="@+id/plus"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginBottom="128dp"
        android:layout_weight="1"
        android:background="#ff9654"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/plus"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/choice2"
        app:layout_constraintEnd_toStartOf="@+id/mark"
        app:layout_constraintStart_toEndOf="@+id/randomOperand"
        app:layout_constraintTop_toBottomOf="@+id/equal" />

    <TextView
        android:id="@+id/mark"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginBottom="128dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:background="#ff9654"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/mark"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/choice3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plus"
        app:layout_constraintTop_toBottomOf="@+id/equal" />

    <Button
        android:id="@+id/choice1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_margin="2dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="256dp"
        android:layout_weight="1"
        android:textColorLink="#b41156"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/choice2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/randomOperand" />

    <Button
        android:id="@+id/choice2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_margin="2dp"
        android:layout_marginBottom="32dp"
        android:layout_weight="1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/choice3"
        app:layout_constraintStart_toEndOf="@+id/choice1"
        app:layout_constraintTop_toBottomOf="@+id/plus" />

    <Button
        android:id="@+id/choice3"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_margin="2dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/choice2"
        app:layout_constraintTop_toBottomOf="@+id/mark" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:focusable="true"
        android:foregroundGravity="clip_vertical"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_more_vert" />

</android.support.constraint.ConstraintLayout>
