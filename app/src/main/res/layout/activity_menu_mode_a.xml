<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="home.fastcalcul.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mode A"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="198dp"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/app_name"
        app:srcCompat="@mipmap/background" />

    <Button
        android:id="@+id/level1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="260dp"
        android:padding="15dp"
        android:text="Level 1"
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />

    <Button
        android:id="@+id/level2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Level 2"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:layout_alignTop="@+id/level1"
        android:layout_alignLeft="@+id/level1"
        android:layout_alignStart="@+id/level1"
        android:layout_marginTop="47dp"
        android:layout_alignRight="@+id/level1"
        android:layout_alignEnd="@+id/level1" />

    <Button
        android:id="@+id/level3"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Level 3"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:layout_below="@+id/level2"
        android:layout_alignLeft="@+id/level2"
        android:layout_alignStart="@+id/level2"
        android:layout_alignRight="@+id/level2"
        android:layout_alignEnd="@+id/level2" />

    <Button
        android:id="@+id/level4"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Level 4"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:layout_below="@+id/level3"
        android:layout_alignLeft="@+id/level3"
        android:layout_alignStart="@+id/level3"
        android:layout_alignRight="@+id/level3"
        android:layout_alignEnd="@+id/level3" />

    <Button
        android:id="@+id/back"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Back"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:layout_below="@+id/level4"
        android:layout_alignLeft="@+id/level4"
        android:layout_alignStart="@+id/level4"
        android:layout_alignRight="@+id/level4"
        android:layout_alignEnd="@+id/level4" />


</RelativeLayout>
